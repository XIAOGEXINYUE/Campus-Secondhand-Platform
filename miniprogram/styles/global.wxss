/* 全局样式文件 - 基于原型界面的样式 */

/* 主色调 */
.text-primary {
  color: #ff6700;
}

.bg-primary {
  background-color: #ff6700;
}

/* 通用容器 */
.app-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

/* 导航栏样式 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 100rpx 30rpx 20rpx 30rpx;
  background-color: #ffffff;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.nav-bar .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

/* 搜索栏样式 */
.search-container {
  padding: 20rpx 30rpx;
  background-color: #ffffff;
}

.search-bar {
  display: flex;
  align-items: center;
  height: 80rpx;
  background-color: #f6f6f6;
  border-radius: 40rpx;
  padding: 0 20rpx;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.search-icon image {
  width: 32rpx;
  height: 32rpx;
}

.search-placeholder {
  font-size: 28rpx;
  color: #999999;
}

/* 书籍卡片样式 */
.book-card {
  background-color: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.book-image {
  width: 100%;
  height: 320rpx;
  object-fit: cover;
}

.book-info {
  padding: 16rpx;
  position: relative;
}

.transaction-badge {
  display: inline-block;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
}

.self-pickup-badge {
  background-color: #e6f7ff;
  color: #1890ff;
}

.delivery-badge {
  background-color: #fff2e8;
  color: #ff6700;
}

.book-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.book-category {
  font-size: 22rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.book-price {
  font-size: 30rpx;
  font-weight: bold;
  color: #ff6700;
  margin-bottom: 8rpx;
}

.book-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: #999999;
}

.like-button {
  width: 40rpx;
  height: 40rpx;
}

.like-button image {
  width: 32rpx;
  height: 32rpx;
}

/* 底部标签栏 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
}

.tab-item image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 4rpx;
}

.tab-item text {
  font-size: 20rpx;
  color: #999999;
}

.tab-item.active text {
  color: #ff6700;
}

/* 底部标签栏 - 适配原生tabBar */
.tab-bar-special {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 0;
  z-index: 99;
  pointer-events: none;
}
