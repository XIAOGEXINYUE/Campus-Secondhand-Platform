/* components/empty-state/index.wxss */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 30rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  text-align: center;
  margin-bottom: 30rpx;
}

.action-button {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ff6700;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 40rpx;
  text-align: center;
}
