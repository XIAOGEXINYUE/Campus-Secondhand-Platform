/* components/book-card/index.wxss */
.book-card {
  width: 100%;
  background-color: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.book-image {
  width: 100%;
  height: 320rpx;
  background-color: #f5f5f5;
}

.book-info {
  padding: 16rpx;
  position: relative;
}

.transaction-badge {
  display: inline-block;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-bottom: 10rpx;
}

.self-pickup {
  color: #3498db;
  background-color: rgba(52, 152, 219, 0.1);
}

.seller-delivery {
  color: #e67e22;
  background-color: rgba(230, 126, 34, 0.1);
}

.book-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.book-meta {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.book-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6700;
  margin-bottom: 8rpx;
}

.book-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.department {
  font-size: 24rpx;
  color: #999999;
}

.like-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.like-btn image {
  width: 36rpx;
  height: 36rpx;
}
