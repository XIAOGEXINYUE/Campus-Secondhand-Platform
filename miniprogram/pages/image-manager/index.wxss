/* pages/image-manager/index.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  margin-bottom: 30rpx;
  margin-top: 30px; /* 适配微信小程序状态栏 */
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.upload-area {
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f9f9f9;
  margin-bottom: 30rpx;
}

.upload-icon {
  font-size: 60rpx;
  color: #999;
  line-height: 1;
}

.upload-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
}

.button-area {
  display: flex;
  justify-content: center;
}

.primary-button {
  background-color: #ff6b6b;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.primary-button[disabled] {
  background-color: #f5f5f5;
  color: #bbb;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.image-item {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 300rpx;
  display: block;
}

.image-name {
  font-size: 24rpx;
  color: #666;
  padding: 16rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.image-actions {
  display: flex;
  border-top: 1rpx solid #eee;
}

.action-button {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 24rpx;
}

.action-button.copy {
  color: #4a90e2;
}

.action-button.delete {
  color: #ff6b6b;
}

.upload-progress {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.progress-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  text-align: center;
}
