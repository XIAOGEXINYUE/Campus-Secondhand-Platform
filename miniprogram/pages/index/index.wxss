/**index.wxss**/
@import '../../styles/global.wxss';

/* 书籍列表样式 */
.book-listings {
  padding: 20rpx 30rpx;
  margin-bottom: 100rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.view-all {
  font-size: 26rpx;
  color: #ff6700;
}

.books-grid {
  width: 100%;
}

.books-row {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

/* 新的书籍卡片样式 */
.book-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.3s ease-out, box-shadow 0.3s ease-out;
  transform: translateY(0);
}

.book-card:active {
  transform: translateY(-6rpx);
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.12);
}

.image-container {
  position: relative;
  width: 100%;
}

.book-image {
  width: 100%;
  height: 340rpx;
  object-fit: cover;
  background-color: #eeeeee;
  display: block;
}

.transaction-badge {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  padding: 4rpx 12rpx;
  font-size: 22rpx;
  font-weight: 500;
  border-radius: 8rpx;
  color: #ffffff;
  line-height: 1.4;
  z-index: 1;
}

.self-pickup-badge {
  background-color: rgba(0, 122, 255, 0.9);
}

.delivery-badge {
  background-color: rgba(52, 199, 89, 0.9);
}

.book-info {
  padding: 16rpx 20rpx 20rpx;
}

.book-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1c1c1e;
  margin-bottom: 10rpx;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.book-category {
  font-size: 24rpx;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.category-text {
  color: #8a8a8e;
}

.condition-text {
  color: #ff6700;
  font-weight: 500;
}

.book-price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.book-price {
  font-size: 36rpx;
  font-weight: 700;
  color: #ff3b30;
}

.like-button {
  width: 42rpx;
  height: 42rpx;
  flex-shrink: 0;
}

.like-button image {
  width: 100%;
  height: 100%;
}
