/**search/index.wxss**/
@import '../../styles/global.wxss';

/* 页面容器 */
.app-container {
  padding: 0 20rpx;
  margin-top: 60px; /* 增加顶部边距，避免与退出按钮重叠 */
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索栏样式 */
.search-bar-container {
  position: fixed;
  top: 60px; /* 增加顶部边距，避免与退出按钮重叠 */
  left: 0;
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  z-index: 100;
  box-sizing: border-box;
}

.search-bar {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
}

.search-input {
  flex: 1;
  height: 60rpx;
  margin-left: 10rpx;
  font-size: 28rpx;
}

/* 分类样式 */
.categories-container {
  margin-top: 150rpx; /* 调整分类容器的顶部边距 */
  padding: 20rpx 0;
  background-color: #ffffff;
}

.categories-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}

.category-icon image {
  width: 50rpx;
  height: 50rpx;
}

.category-name {
  font-size: 24rpx;
  color: #333;
}

/* 搜索区域样式 */
.search-section {
  margin-top: 30rpx;
  background-color: #ffffff;
  padding: 30rpx;
}

.search-section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.search-section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.search-section-action {
  font-size: 24rpx;
  color: #999;
}

.search-tags {
  display: flex;
  flex-wrap: wrap;
}

.search-tag {
  background-color: #f5f5f5;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #333;
}

/* 搜索结果样式 */
.search-results {
  margin-top: 30rpx;
  padding: 30rpx;
}

.results-count {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.book-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding-bottom: 100rpx;
}

.book-card {
  background-color: #ffffff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.book-image {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
}

.book-info {
  padding: 20rpx;
}

.transaction-badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  margin-bottom: 10rpx;
}

.self-pickup {
  color: #3498db;
  background-color: rgba(52, 152, 219, 0.1);
}

.delivery {
  color: #e67e22;
  background-color: rgba(230, 126, 34, 0.1);
}

.book-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.book-meta-info {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.book-price {
  font-size: 32rpx;
  color: #ff6700;
  font-weight: bold;
  margin-top: 10rpx;
}

.book-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.book-college {
  font-size: 22rpx;
  color: #999;
}

.like-button {
  width: 40rpx;
  height: 40rpx;
}

.like-button image {
  width: 100%;
  height: 100%;
}
